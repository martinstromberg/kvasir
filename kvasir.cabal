                          , warp             >= 3.3.29
                          , twain           ^>= 2.1
                          , beam-core        >= 0.10
                          , beam-sqlite      >= 0.5.3
                          , text             >= 1.0     && <2.1
                          , time             >= 1.9
                          , bytestring       >= 0.10.4
                          , utf8-string      >= 0.9
                          , sqlite-simple    >= 0.4.18
                          , uuid             >= 1.3.15
                          , wai-extra        >= 3.0     && <3.2
